@page "/"

<style>
    /* Background and layout styling */
    body {
        margin: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom right, #00c6ff, #0072ff);
        color: #fff;
    }

    .home-container {
        padding: 20px;
        text-align: center;
    }

    .header {
        margin-bottom: 40px;
    }

    .header h1 {
        font-size: 3rem;
        margin: 10px 0;
    }

    .header p {
        font-size: 1.2rem;
    }

    .features-section, .forecast-section, .faq-section {
        margin: 40px 0;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 15px;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 15px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    ul li {
        font-size: 1.1rem;
        margin: 10px 0;
    }

    .cta-button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #ff9800;
        border: none;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
    }

    .cta-button:hover {
        background-color: #e68a00;
    }

    .weather-info {
        font-size: 1.5rem;
        margin-top: 20px;
    }
</style>

<div class="home-container">
    <!-- Header Section -->
    <div class="header">
        <h1>Welcome to WeatherNow</h1>
        <p>Stay updated with real-time weather updates and detailed forecasts!</p>
    </div>

    <!-- Features Section -->
    <div class="features-section">
        <h2>Features</h2>
        <ul>
            <li>Real-time weather updates for your location</li>
            <li>5-day detailed weather forecasts</li>
            <li>Interactive and animated weather maps</li>
            <li>Save and manage your favorite cities</li>
            <li>Hourly temperature, wind, and humidity data</li>
        </ul>
    </div>

    <!-- Forecast Section -->
    <div class="forecast-section">
        <h2>Today's Weather</h2>
        <p class="weather-info">🌞 Sunny, 28°C (Feels like 30°C)</p>
        <p>Humidity: 40% | Wind: 10 km/h | UV Index: 7</p>
        <button class="cta-button">View Detailed Forecast</button>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section">
        <h2>Why Choose WeatherNow?</h2>
        <p>Our app combines accurate weather data with a user-friendly interface to provide:</p>
        <ul>
            <li>Reliable information sourced from leading meteorological agencies</li>
            <li>Personalized features to suit your needs</li>
            <li>Easy access from any device</li>
        </ul>
        <button class="cta-button">Learn More</button>
    </div>
</div>
